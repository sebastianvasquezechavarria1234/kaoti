---
import Title from "../../Title.astro"
import Post from "../home/Post.astro"
---

<section class="mt-[120px] pb-[120px]">
    <Title 
        title="Perfil"
    />
    <!-- HEADER -->
    <div class="flex gap-[30px] max-sm:flex-col">
        <label class="w-[200px] h-[200px] flex justify-center items-center rounded-full bg-[url(/avatar.jpeg)] bg-cover bg-center max-sm:w-[100px] max-sm:h-[100px]">
            <input
                class="w-full h-full object-cover opacity-0 cursor-pointer" 
                type="file">
        </label>
        <div class="flex flex-col gap-[10px] w-[60%]">
            <h4 class="mb-[0px]">UserName</h4>
            <p class="text-green-300 flex gap-[5px] items-center">
                <span class="w-[8px] h-[8px] relative block rounded-full bg-green-300"></span>
                Activo
            </p>
            <div class="flex flex-wrap gap-[10px]">
                <div class="w-[40%] flex items-center gap-[5px]">
                    <p>13</p>
                    <p>Post</p>
                </div>
                <div class="w-[40%] flex items-center gap-[5px]">
                    <p>4</p>
                    <p>Seguidores</p>
                </div>
                <div class="w-[40%] flex items-center gap-[5px]">
                    <p>12</p>
                    <p>Seguidos</p>
                </div>
                <div class="w-[40%] underline">
                    <p id="acciones" class="cursor-pointer">Acciones</p>
                </div>
            </div>

        </div>
    </div>

     <!-- MODAL -->
     <section class="modal w-full flex gap-[10px] fixed left-0 bg-white/5 rounded-[20px] border-[1px] border-white/30 backdrop-blur-[16px] p-[24px] pt-[100px] justify-center">
        <div class="w-[600px] mx-auto flex flex-col gap-[10px]">
            <!-- OPCIONES MODAL -->
             <h4 class="text-[1.5rem]">Acciones</h4>
             <a 
                class="p-[20px] bg-white/5 border-[1px] border-white/30 rounded-[6px] flex items-center gap-[10px]"
                href="">
                <svg width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="1.5"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-edit"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1" /><path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z" /><path d="M16 5l3 3" /></svg>
                Editar perfil
            </a>
             <a 
                class="p-[20px] bg-white/5 border-[1px] border-white/30 rounded-[6px] flex items-center gap-[10px]"
                href="">
                <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="1.5"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-settings"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10.325 4.317c.426 -1.756 2.924 -1.756 3.35 0a1.724 1.724 0 0 0 2.573 1.066c1.543 -.94 3.31 .826 2.37 2.37a1.724 1.724 0 0 0 1.065 2.572c1.756 .426 1.756 2.924 0 3.35a1.724 1.724 0 0 0 -1.066 2.573c.94 1.543 -.826 3.31 -2.37 2.37a1.724 1.724 0 0 0 -2.572 1.065c-.426 1.756 -2.924 1.756 -3.35 0a1.724 1.724 0 0 0 -2.573 -1.066c-1.543 .94 -3.31 -.826 -2.37 -2.37a1.724 1.724 0 0 0 -1.065 -2.572c-1.756 -.426 -1.756 -2.924 0 -3.35a1.724 1.724 0 0 0 1.066 -2.573c-.94 -1.543 .826 -3.31 2.37 -2.37c1 .608 2.296 .07 2.572 -1.065z" /><path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0" /></svg>
                Configuracion
            </a>
             <a 
                class="p-[20px] bg-white/5 border-[1px] border-white/30 rounded-[6px] flex items-center gap-[10px]"
                href="">
                <svg  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="1.5"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-logout"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2" /><path d="M9 12h12l-3 -3" /><path d="M18 15l3 -3" /></svg>
                Cerrar sesi√≥n
            </a>
            <article class="iconX absolute top-0 right-0 cursor-pointer w-[80px] h-[80px] flex flex-col justify-center items-center rounded-[15px]  gap-[5px] max-sm:w-[80px] max-sm:h-[80px] p-[10px]">
                <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="1.5"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-x"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 6l-12 12" /><path d="M6 6l12 12" /></svg>
            </article>

             

        </div>
        
    </section>

    <!-- TAB -->
     <div class="flex gap-[10px] mt-[30px]">
        <a 
            class="py-[3px] px-[15px] flex items-center gap-[10px] text-black bg-blue-500 rounded-[30px] font-bold"
            href="">
            Seguir
            <svg   width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="1.5"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-corner-up-right"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M6 18v-6a3 3 0 0 1 3 -3h10l-4 -4m0 8l4 -4" /></svg>
        </a>
        <a 
            class="py-[3px] px-[15px] flex items-center gap-[10px] text-black bg-green-300 rounded-[30px] font-bold"
            href="">
            Enviar mensaje
            <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="1.5"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-message"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M8 9h8" /><path d="M8 13h6" /><path d="M18 4a3 3 0 0 1 3 3v8a3 3 0 0 1 -3 3h-5l-5 3v-3h-2a3 3 0 0 1 -3 -3v-8a3 3 0 0 1 3 -3h12z" /></svg>
        </a>
     </div>

      <!-- tabs -->
    <div class="flex flex-wrap items-center gap-[10px] mt-[60px]">
        <a 
            class="active py-[10px] px-[16px] opacity-100 font-bold text-black bg-blue-500 rounded-[6px]"
            href="/Perfil">
            Post
        </a>
        <a 
            class=" py-[10px] px-[16px] opacity-100 font-bold text-black bg-blue-500 rounded-[6px]"
            href="/perfil/Tab2">
            tra reposts
        </a>
        <a 
            class="py-[10px] px-[16px] opacity-100 font-bold text-black bg-blue-500 rounded-[6px]"
            href="/perfil/Tab3">
            otra informacion
        </a>

    </div>
     <div class="translate-y-[50px] mt-[50px]">
         <Title
            title="Post"
         />

     </div>
     <Post 
     />


</section>


<style>
    .active{
        background-color: transparent;
        color: var(--blue);
        border: 1px solid var(--blue);
    }
.modal{
    transition: all .3s;
    bottom: -50%;
    height: 50%;
    z-index: 100;
}
.modalActive{
    bottom: 0%
}
</style>


<script>
    const acciones = document.querySelector("#acciones").addEventListener("click", modalFuntion);
    const iconX = document.querySelector(".iconX").addEventListener("click", modalFuntion);
    const modal = document.querySelector(".modal");

    function modalFuntion () {
        modal.classList.toggle("modalActive")
    }
</script>