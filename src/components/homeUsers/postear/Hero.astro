---
import Title from "../../Title.astro";
import Input from "../../autentificacion/Input.astro";
---

<section class="mt-[120px] relative z-10">
    
    <form 
        class="w-full flex flex-col justify-end bg-white/5 p-[24px] rounded-[10px] border-[1px] border-white/20"
        action=""
        method="">
        <Title 
        title="Postear"
    />

        <label class="block mb-[20px]">
            <p class="opacity-100">Seleccione una imagen :</p>
            <div class="update flex flex-col items-center gap-[10px]relative py-[15px] px-[15px] outline-none rounded-[6px] border-white/20 bg-white/5 w-full duration-300 transition-all">
                <svg  class="text-white/70"  width="50"  height="50"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="1.5"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-photo"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 8h.01" /><path d="M3 6a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v12a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3v-12z" /><path d="M3 16l5 -5c.928 -.893 2.072 -.893 3 0l5 5" /><path d="M14 14l1 -1c.928 -.893 2.072 -.893 3 0l3 3" /></svg>
                <p>Arrastrar y soltar o brwoser para cargar</p>
                <input class="absolute top-0 left-0 w-full h-full opacity-0" type="file">

            </div>
        </label>
        <Input
            title="Caption :"
            type="text"
        />
        <input
        class="w-full p-[13px] font-bold rounded-[6px] text-white bg-blue-600" 
        type="submit">

    </form>
</section>

<style>
    .update{
        border: 1px dashed rgba(255, 255, 255, 0.25);
    }

</style>