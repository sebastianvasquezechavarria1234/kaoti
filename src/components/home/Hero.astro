        </div>
    </div>

    <picture class="relative w-[80%] flex justify-center items-center max-lg:w-full">
        <video 
            class="w-[800px] block max-lg:w-full"
            src="/video.webm" 
            autoplay
            loop>
        </video>
    </picture>
</section>

<style>
    h2 span{
        color: var(--green);
        animation: anm__color 5s infinite linear;
    }
    @keyframes anm__color {
        0%, 100% {
            color: var(--purple);
            text-shadow: 0px 0px 30px rgba(128, 0, 128, 0.539);
         }

         50% {
             color: var(--green);
             text-shadow: 0px 0px 30px #3ce7ae79;
        }
    }
</style>