---
import BtnDefault from "../../components/BtnDefault.astro";
---

<section id="MnResponsive" class="fixed w-full top-[70px] z-50 backdrop-blur-[16px] p-[20px] border-b-[1px] border-white/30">
    <ul class="flex flex-col gap-[20px]">
        <a href="/HomeUsers/Home">Inicio</a>
        <a href="/HomeUsers/Explorar">Explorar</a>
        <a href="/HomeUsers/Notificaciones">Notificaciones</a>
        <BtnDefault 
            href="/HomeUsers/Perfil"
            style="justify-center"
            title="perfil"
        />
    </ul>
</section>

<style>
    section{
        transform: scaleY(0);
        transform-origin: top;
        opacity: 0;
        transition: all .3s ease-in-out;
    }
    .MnResponsiveActive{
        transform: scaleY(1);
        opacity: 1;
    }
</style>

<script>
    const iconMn = document.querySelector("#iconMn");
    const MnResponsive = document.querySelector("#MnResponsive");

    iconMn.addEventListener("click", () => {
        MnResponsive.classList.toggle("MnResponsiveActive");
    })
</script>