<style>
    .bg__blue{
        background-color: var(--blue);
    }
    header nav ul:nth-child(2):hover li{
        filter: blur(5px);
    }
    header nav ul:nth-child(2) li{
        transition: all .3s ease-in-out;
    }
    header nav ul:nth-child(2) li:hover{
        filter: blur(0px);
        opacity: 1;
    }
    header nav ul:nth-child(2) li:nth-child(5){
        display: none
    }
    @media screen and (max-width: 600px) {
        header nav ul:nth-child(2) li:nth-child(1),
        header nav ul:nth-child(2) li:nth-child(2),
        header nav ul:nth-child(2) li:nth-child(3),
        header nav ul:nth-child(2) li:nth-child(4){
            display: none;
        }
        header nav ul:nth-child(2) li:nth-child(5){
        display: flex;
    }
    }
</style>